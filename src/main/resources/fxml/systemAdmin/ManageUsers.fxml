<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml"
            fitToWidth="true"
            style="-fx-background:#f5f5f5;">

    <VBox spacing="20" style="-fx-padding: 20;">

        <!-- PAGE TITLE -->
        <VBox spacing="5">
            <Label text="User Management"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label text="Manage system users and their permissions"
                   style="-fx-text-fill: #777;" />
        </VBox>

        <!-- TOP BAR: SEARCH + FILTERS + ADD USER -->
        <HBox spacing="15" alignment="CENTER_LEFT">

            <!-- Search Field -->
            <TextField fx:id="searchField"
                       promptText="Search by name or email..."
                       style="-fx-background-radius: 8; -fx-padding: 10;"
                       HBox.hgrow="ALWAYS" />

            <!-- Role Filter -->
            <ComboBox prefWidth="150"
                      promptText="All Roles" />

            <!-- Status Filter -->
            <ComboBox prefWidth="150"
                      promptText="All Status" />

            <!-- Add User Button -->
            <Button text="Add User"
                    style="-fx-background-color:#ff9800; -fx-text-fill:white; -fx-background-radius:8; -fx-padding:10 16;" />
        </HBox>

        <!-- MAIN CARD -->
        <VBox spacing="15"
              style="-fx-background-color: white; -fx-background-radius:12; -fx-padding:20; -fx-effect:dropshadow(gaussian,rgba(0,0,0,0.08),10,0,0,4);">

            <Label text="All Users (6)"
                   style="-fx-font-size: 16px; -fx-font-weight:bold;" />

            <!-- USERS TABLE -->
            <TableView fx:id="usersTable" prefHeight="400">

                <!-- COLUMN: Name -->
                <columns>
                    <TableColumn text="Name" prefWidth="150" />

                    <!-- Email -->
                    <TableColumn text="Email" prefWidth="200" />

                    <!-- Role -->
                    <TableColumn text="Role" prefWidth="140" />

                    <!-- Department -->
                    <TableColumn text="Department" prefWidth="200" />

                    <!-- Status -->
                    <TableColumn text="Status" prefWidth="100" />

                    <!-- Actions -->
                    <TableColumn text="Actions" prefWidth="120" />
                </columns>

            </TableView>

        </VBox>

    </VBox>

</ScrollPane>
