<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" style="-fx-background: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fcms.controllers.systemAdmin.WaitingListController">

    <VBox spacing="20" style="-fx-padding: 20;">

        <!-- PAGE TITLE -->
        <VBox spacing="5">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;"
                   text="Waiting List"/>
            <Label style="-fx-text-fill: #666;"
                   text="Users waiting to be approved by System Admin."/>
        </VBox>

        <!-- THIS WILL BE POPULATED BY CONTROLLER -->
        <VBox fx:id="userListContainer" spacing="20"/>

        <!-- FOOTER COUNT -->
        <Label fx:id="countLabel" style="-fx-text-fill: #777;"
               text="Showing 0 pending users"/>

    </VBox>
</ScrollPane>
