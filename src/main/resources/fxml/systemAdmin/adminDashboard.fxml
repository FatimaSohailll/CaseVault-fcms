<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" style="-fx-background: #f6f6f6;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fcms.controllers.systemAdmin.AdminDashboardController">

    <VBox spacing="25">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- ====================== PAGE TITLE ====================== -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;"
               text="Admin Dashboard" />


        <!-- ====================== OVERVIEW SECTION ====================== -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                   text="Overview" />

            <HBox spacing="20">

                <!-- Total Users -->
                <VBox prefWidth="200" spacing="10"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-border-radius: 10; -fx-padding: 15; -fx-border-color: #ffa54f;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;"
                           text="Total Users"/>
                    <!-- dynamic number from DB -->
                    <Label fx:id="totalUsersLabel"
                           style="-fx-font-size: 30px; -fx-font-weight: bold;"
                           text="0"/>
                </VBox>

                <!-- Waiting List (dynamic count) -->
                <VBox prefWidth="200" spacing="10"
                      style="-fx-background-color: white; -fx-border-color: #ffa54f;
                             -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;"
                           text="Waiting list" />
                    <Label fx:id="waitingListCountLabel"
                           style="-fx-font-size: 30px; -fx-font-weight: bold;"
                           text="0" />
                </VBox>

            </HBox>
        </VBox>


        <!-- ====================== WAITING LIST PREVIEW SECTION ====================== -->
        <VBox spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <VBox spacing="3">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                           text="Waiting List" />
                    <Label style="-fx-text-fill: #777;"
                           text="Users waiting to be approved by System Admin." />
                </VBox>
                <Pane HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #1a2c60; -fx-font-weight: bold;"
                       text="See More >" />
            </HBox>

            <!-- Dynamic cards inserted here -->
            <VBox fx:id="waitingListContainer" spacing="10"/>
        </VBox>


        <!-- ====================== CASE HISTORY SECTION ====================== -->
        <VBox spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
            <Label text="Recent History"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <!-- Dynamic content inserted here -->
            <VBox fx:id="historyContainer" spacing="10"/>
        </VBox>

    </VBox>
</ScrollPane>
