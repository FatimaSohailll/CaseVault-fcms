<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fitToWidth="true"
            style="-fx-background: #f5f5f5;"
            fx:controller="com.fcms.controllers.systemAdmin.ManageUsersController">

    <VBox spacing="20" fillWidth="true">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- PAGE TITLE -->
        <VBox spacing="5">
            <Label text="User Management"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <Label text="Manage system users and their permissions"
                   style="-fx-text-fill: #777;"/>
        </VBox>

        <!-- TOP BAR -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="searchField"
                       promptText="Search by name, username or email..."
                       HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 8; -fx-padding: 10;"/>

            <ComboBox fx:id="roleFilter" prefWidth="160" styleClass="manage-role-combo" />


            <Button fx:id="addUserBtn"
                    text="Add User"
                    onAction="#openAddUser"
                    style="-fx-background-color: #ff9800;
                           -fx-text-fill: white;
                           -fx-background-radius: 8;
                           -fx-padding: 10 16;"/>
        </HBox>

        <!-- WHITE CARD -->
        <VBox spacing="15"
              style="-fx-background-color: white;
                     -fx-background-radius: 12;
                     -fx-padding: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">

            <Label fx:id="totalUsersLabel"
                   text="All Users (0)"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TableView fx:id="usersTable" prefHeight="500">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="120" text="User ID"/>
                    <TableColumn fx:id="nameColumn" prefWidth="150" text="Name"/>
                    <TableColumn fx:id="emailColumn" prefWidth="200" text="Email"/>
                    <TableColumn fx:id="roleColumn" prefWidth="140" text="Role"/>
                    <TableColumn fx:id="createdColumn" prefWidth="180" text="Created At"/>
                    <TableColumn fx:id="actionsColumn" prefWidth="150" text="Actions"/>
                </columns>
            </TableView>

        </VBox>

    </VBox>

</ScrollPane>
