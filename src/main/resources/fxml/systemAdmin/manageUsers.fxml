<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml"
            fitToWidth="true"
            style="-fx-background:#f5f5f5;"
            fx:controller="com.fcms.controllers.systemAdmin.ManageUsersController">

    <VBox spacing="20" style="-fx-padding: 20;">

        <!-- PAGE TITLE -->
        <VBox spacing="5">
            <Label text="User Management"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label text="Manage system users and their permissions"
                   style="-fx-text-fill: #777;" />
        </VBox>

        <!-- TOP BAR -->
        <HBox spacing="15" alignment="CENTER_LEFT">

            <TextField fx:id="searchField"
                       promptText="Search by name, username or email..."
                       style="-fx-background-radius: 8; -fx-padding: 10;"
                       HBox.hgrow="ALWAYS" />

            <ComboBox fx:id="roleFilter"
                      prefWidth="150"
                      promptText="All Roles" />

            <ComboBox fx:id="statusFilter"
                      prefWidth="150"
                      promptText="All Status" />

            <Button fx:id="addUserBtn"
                    text="Add User"
                    onAction="#openAddUser"
                    style="-fx-background-color:#ff9800; -fx-text-fill:white;
                           -fx-background-radius:8; -fx-padding:10 16;" />
        </HBox>


        <!-- MAIN WHITE CARD -->
        <VBox spacing="15"
              style="-fx-background-color: white; -fx-background-radius:12;
                     -fx-padding:20; -fx-effect:dropshadow(gaussian,rgba(0,0,0,0.08),10,0,0,4);">

            <Label fx:id="totalUsersLabel"
                   text="All Users (0)"
                   style="-fx-font-size:16px; -fx-font-weight:bold;" />

            <!-- TABLE -->
            <TableView fx:id="usersTable" prefHeight="400">

                <columns>
                    <TableColumn fx:id="idColumn" text="User ID" prefWidth="120" />
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200" />
                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="140" />
                    <TableColumn fx:id="createdColumn" text="Created At" prefWidth="180" />
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120" />
                </columns>

            </TableView>

        </VBox>

    </VBox>

</ScrollPane>
