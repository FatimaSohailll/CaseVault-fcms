<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fcms.controllers.systemAdmin.UserController"
      spacing="15"
      style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10;">

    <Label text="User Details"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <GridPane hgap="15" vgap="12">

        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <!-- USERNAME -->
        <Label text="Username:" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- FULL NAME -->
        <Label text="Full Name:" GridPane.rowIndex="1"/>
        <TextField fx:id="nameField"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- EMAIL -->
        <Label text="Email:" GridPane.rowIndex="2"/>
        <TextField fx:id="emailField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- PASSWORD -->
        <Label text="Password:" GridPane.rowIndex="3"/>
        <PasswordField fx:id="passwordField"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- ROLE -->
        <Label text="Role:" GridPane.rowIndex="4"/>
        <ComboBox fx:id="roleField"
                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    </GridPane>

    <!-- ROLE-SPECIFIC FIELDS -->
    <VBox fx:id="roleSpecificBox"
          spacing="12"
          style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-background-radius: 6;"
          visible="false"
          managed="false">

        <!-- POLICE -->
        <GridPane fx:id="policeBox" hgap="10" vgap="8" visible="false" managed="false">
            <Label text="Rank:" GridPane.rowIndex="0"/>
            <TextField fx:id="policeRankField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Department:" GridPane.rowIndex="1"/>
            <TextField fx:id="policeDeptField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- COURT OFFICIAL -->
        <GridPane fx:id="courtBox" hgap="10" vgap="8" visible="false" managed="false">
            <Label text="Court Name:" GridPane.rowIndex="0"/>
            <TextField fx:id="courtNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Designation:" GridPane.rowIndex="1"/>
            <TextField fx:id="courtDesigField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- FORENSIC EXPERT -->
        <GridPane fx:id="expertBox" hgap="10" vgap="8" visible="false" managed="false">
            <Label text="Lab Name:" GridPane.rowIndex="0"/>
            <TextField fx:id="labNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        </GridPane>

    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#closeDialog"
                style="-fx-background-color:#999; -fx-text-fill:white; -fx-background-radius:6;"/>

        <Button text="Save" onAction="#saveUser"
                style="-fx-background-color:#4CAF50; -fx-text-fill:white; -fx-background-radius:6;"/>
    </HBox>

</VBox>
