<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fcms.controllers.forensicExpert.UploadReportController">

    <VBox spacing="24.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
        </padding>

        <!-- Header -->
        <VBox spacing="8.0">
            <Label style="-fx-text-fill: #171617; -fx-font-size: 24px; -fx-font-weight: bold;" text="Upload Forensic Report" />
            <Label fx:id="requestIdLabel" style="-fx-text-fill: #6b7280; -fx-font-size: 16px;" text="Request ID: " />
        </VBox>

        <!-- Main Content -->
        <HBox spacing="24.0" VBox.vgrow="ALWAYS">
            <!-- Evidence Details Section -->
            <VBox spacing="16.0" prefWidth="300.0">
                <VBox style="-fx-background-color: #f5f5f4; -fx-border-color: #e5e5e5; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;">
                    <VBox spacing="16.0">
                        <Label style="-fx-text-fill: #171617; -fx-font-size: 18px; -fx-font-weight: bold;" text="Evidence Details" />

                        <VBox spacing="12.0">
                            <VBox spacing="4.0">
                                <Label style="-fx-text-fill: #6b7280; -fx-font-size: 14px;" text="Evidence ID" />
                                <Label fx:id="evidenceIdLabel" style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            </VBox>

                            <VBox spacing="4.0">
                                <Label style="-fx-text-fill: #6b7280; -fx-font-size: 14px;" text="Evidence Type" />
                                <Label fx:id="evidenceTypeLabel" style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            </VBox>

                            <VBox spacing="4.0">
                                <Label style="-fx-text-fill: #6b7280; -fx-font-size: 14px;" text="Requested By" />
                                <Label fx:id="requestedByLabel" style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            </VBox>

                            <VBox spacing="4.0">
                                <Label style="-fx-text-fill: #6b7280; -fx-font-size: 14px;" text="Request Date" />
                                <Label fx:id="requestDateLabel" style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            </VBox>
                        </VBox>

                        <VBox spacing="4.0">
                            <Label style="-fx-text-fill: #6b7280; -fx-font-size: 14px;" text="Description" />
                            <Label fx:id="descriptionLabel" style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-wrap-text: true;" wrapText="true" />
                        </VBox>
                    </VBox>
                </VBox>
            </VBox>

            <!-- Upload Form Section -->
            <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                <VBox style="-fx-background-color: white; -fx-border-color: #e5e5e5; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 24;">
                    <VBox spacing="20.0">
                        <!-- Report Title -->
                        <VBox spacing="8.0">
                            <Label style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-font-weight: bold;" text="Report Title *" />
                            <TextField fx:id="titleField" promptText="Enter report title..." />
                        </VBox>

                        <!-- Completion Date -->
                        <VBox spacing="8.0">
                            <Label style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-font-weight: bold;" text="Completion Date *" />
                            <DatePicker fx:id="completionDatePicker" />
                        </VBox>

                        <!-- File Upload -->
                        <VBox spacing="8.0">
                            <Label style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-font-weight: bold;" text="Upload Report File *" />
                            <VBox spacing="8.0">
                                <Button fx:id="chooseFileButton" mnemonicParsing="false" text="Choose File" />
                                <Label fx:id="fileNameLabel" style="-fx-text-fill: #6b7280; -fx-font-size: 13px;" text="No file selected" />
                            </VBox>
                        </VBox>

                        <!-- Additional Notes -->
                        <VBox spacing="8.0">
                            <Label style="-fx-text-fill: #171617; -fx-font-size: 14px; -fx-font-weight: bold;" text="Additional Notes" />
                            <TextArea fx:id="notesArea" prefRowCount="4" promptText="Enter any additional observations or recommendations..." wrapText="true" />
                        </VBox>
                    </VBox>
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="12.0" alignment="CENTER_RIGHT">
                    <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
                    <Button fx:id="submitButton" mnemonicParsing="false" text="Submit Report" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>