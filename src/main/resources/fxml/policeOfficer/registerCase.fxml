<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fcms.controllers.policeOfficer.RegisterCaseController">

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="22" styleClass="main-content">
                <padding>
                    <Insets top="26" right="26" bottom="26" left="26"/>
                </padding>

                <Label text="Register New Case" styleClass="section-title"/>
                <Label text="Add a new case to the system" styleClass="stat-sub"/>

                <VBox spacing="16" styleClass="stat-box">
                    <Label text="Case Information" styleClass="stat-title"/>

                    <!-- Case Title -->
                    <VBox spacing="8">
                        <Label text="Case Title *"/>
                        <TextField fx:id="caseTitleField" promptText="Enter case title"/>
                        <Label fx:id="titleWarning" text="⚠ Please fill in this field"
                               visible="false" styleClass="field-warning"/>
                    </VBox>

                    <!-- Case Type -->
                    <VBox spacing="8">
                        <Label text="Case Type *"/>
                        <ComboBox fx:id="caseTypeDropdown" promptText="Select case type"/>
                        <Label fx:id="typeWarning" text="⚠ Please fill in this field"
                               visible="false" styleClass="field-warning"/>
                    </VBox>

                    <!-- Priority -->
                    <VBox spacing="8">
                        <Label text="Priority *"/>
                        <ComboBox fx:id="priorityDropdown" promptText="Select priority"/>
                        <Label fx:id="priorityWarning" text="⚠ Please select a priority"
                               visible="false" styleClass="field-warning"/>
                    </VBox>

                    <!-- Description -->
                    <VBox spacing="8">
                        <Label text="Description *"/>
                        <TextArea fx:id="descriptionField" promptText="Enter case description"
                                  prefRowCount="4"/>
                        <Label fx:id="descWarning" text="⚠ Please fill in this field"
                               visible="false" styleClass="field-warning"/>
                    </VBox>

                    <!-- Date -->
                    <VBox spacing="8">
                        <Label text="Date *"/>
                        <DatePicker fx:id="datePicker" promptText="yyyy-MM-dd"/>
                        <Label fx:id="dateWarning" text="⚠ Please fill in this field"
                               visible="false" styleClass="field-warning"/>
                    </VBox>

                    <!-- Location -->
                    <VBox spacing="8">
                        <Label text="Location *"/>
                        <TextField fx:id="locationField" promptText="Enter location"/>
                    </VBox>

                    <!-- Assigned Officer -->
                    <VBox spacing="8">
                        <Label text="Assigned Officer *"/>
                        <ComboBox fx:id="officerDropdown" promptText="Select assigned officer"/>
                    </VBox>

                    <Label fx:id="validationMessage" styleClass="case-meta" wrapText="true"/>
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="12">
                    <Button text="Save Case" onAction="#handleSaveCase" styleClass="btn"/>
                    <Button text="Cancel" onAction="#handleCancel" styleClass="btn"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>