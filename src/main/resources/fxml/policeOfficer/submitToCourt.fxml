<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fcms.controllers.policeOfficer.SubmitToCourtController">

    <VBox spacing="25">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

        <!-- BACK TO DASHBOARD -->
        <HBox spacing="5">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="←" />
            <Hyperlink style="-fx-font-size: 14;" text="Back to Dashboard" />
        </HBox>

        <!-- HEADER -->
        <VBox spacing="5">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Submit Case to Court" />
            <Label style="-fx-font-size: 14; -fx-text-fill: #666;" text="Final review and submission to judicial system" />
        </VBox>

        <!-- CASE DROPDOWN -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Select Case" />

            <ComboBox fx:id="caseDropdown" prefWidth="350" promptText="Select a case" styleClass="court-combo" />
        </VBox>

        <!-- CASE SUMMARY -->
        <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10;">
            <padding><Insets bottom="25" left="20" right="20" top="25" /></padding>

            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Case Summary" />

            <VBox alignment="CENTER" spacing="8">
                <Label fx:id="selectedCaseLabel" style="-fx-font-size: 18; -fx-text-fill: #333;" text="No case selected" />
            </VBox>
        </VBox>

        <!-- EVIDENCE SUMMARY -->
        <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10;">
            <padding><Insets bottom="25" left="20" right="20" top="25" /></padding>

            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Evidence Summary" />

            <HBox spacing="20">

                <VBox alignment="CENTER" prefWidth="200" spacing="5" style="-fx-background-color: #eef5ff; -fx-background-radius: 10; -fx-padding: 20;">
                    <Label fx:id="evidenceCount" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="0" />
                    <Label style="-fx-text-fill: #666;" text="Evidence Items" />
                </VBox>

                <VBox alignment="CENTER" prefWidth="200" spacing="5" style="-fx-background-color: #eef5ff; -fx-background-radius: 10; -fx-padding: 20;">
                    <Label fx:id="forensicCount" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="0" />
                    <Label style="-fx-text-fill: #666;" text="Forensic Reports" />
                </VBox>
            </HBox>

            <!-- COURT OFFICIAL -->
            <VBox spacing="10" style="-fx-padding: 10 0;">
                <Label style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Assign to Court Official" />


                <ComboBox fx:id="courtOfficialCombo" prefWidth="350" promptText="Select Court Official" styleClass="court-combo" />
            </VBox>

            <HBox spacing="10" style="-fx-background-color: #f0f6ff; -fx-padding: 15; -fx-background-radius: 8;">
                <Label style="-fx-font-size: 18;" text="⚠" />
            <VBox prefHeight="0.0" prefWidth="502.0">
               <children>
                      <Label prefHeight="20.0" prefWidth="597.0" style="-fx-font-size: 14;" text="Once submitted to court, this case will be transferred to the judicial system." />
                  <Label layoutX="10.0" layoutY="10.0" prefHeight="20.0" prefWidth="597.0" style="-fx-font-size: 14;" text="If the button is greyed out, it means the case has already been submitted." />
               </children>
            </VBox>
            </HBox>

            <HBox spacing="15">
                <Button fx:id="submitButton" onAction="#handleSubmit" prefWidth="300" styleClass="submit-button" text="⚖   Submit to Court" />
            </HBox>
        </VBox>

    </VBox>
</ScrollPane>
