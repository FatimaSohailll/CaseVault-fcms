<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" fx:id="searchCasesRoot"
            style="-fx-background: #f6f6f6; -fx-padding: 10;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fcms.controllers.courtOfficial.SearchCasesController">

    <VBox spacing="25">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

        <!-- Title -->
        <Label text="Search Cases"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <!-- Search Panel -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

            <Label text="Search Cases" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="Find submitted cases using filters below"
                   style="-fx-text-fill: #777;"/>

            <GridPane hgap="40" vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                </columnConstraints>

                <!-- Search Field -->
                <VBox spacing="5" GridPane.columnIndex="0">
                    <Label text="Case ID / Defendant Name" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="searchField" promptText="Enter case number or defendant"/>
                </VBox>

                <!-- Case Type -->
                <VBox spacing="5" GridPane.columnIndex="1">
                    <Label text="Case Type" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="typeCombo" promptText="All Types"/>
                </VBox>

                <!-- Status -->
                <VBox spacing="5" GridPane.columnIndex="2">
                    <Label text="Status" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="statusCombo" promptText="All Status"/>
                </VBox>
            </GridPane>

            <HBox spacing="10">
                <Button fx:id="searchBtn"
                        text="ðŸ” Search"
                        style="-fx-background-color: #ff9800; -fx-text-fill: white;
                               -fx-padding: 6 20; -fx-background-radius: 5;"/>

                <Button fx:id="resetBtn"
                        text="Reset Filters"
                        style="-fx-background-color: #ececec;
                               -fx-padding: 6 20; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>

        <!-- Search Results -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

            <Label text="Search Results" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label fx:id="resultsCount"
                   style="-fx-text-fill: #777;"
                   text="0 cases found" />

            <!-- Dynamic Case Cards will load here -->
            <VBox fx:id="resultsContainer" spacing="10"/>
        </VBox>

    </VBox>
</ScrollPane>
