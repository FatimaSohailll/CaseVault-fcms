<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" style="-fx-background: #f6f6f6;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fcms.controllers.courtOfficial.RecordVerdictController">

    <content>
        <VBox spacing="25">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- PAGE TITLE -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Record Verdict" />

            <!-- HEADER -->
            <VBox style="-fx-background-color: #ff9800; -fx-background-radius: 6;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <children>
                    <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="âš–  Record Verdict" />
                    <Label style="-fx-text-fill: white; -fx-opacity: 0.8;" text="Enter verdict details for the selected case" />
                </children>
            </VBox>

            <!-- CASE INFO -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 8;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <children>
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Case Information" />

                    <HBox spacing="50">
                        <children>

                            <!-- LEFT COLUMN -->
                            <VBox spacing="10">
                                <children>

                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Case Number:" />
                                            <Label fx:id="caseIdLabel" text="--" />
                                        </children>
                                    </HBox>

                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Type:" />
                                            <Label fx:id="typeLabel" text="--" />
                                        </children>
                                    </HBox>

                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Description:" />
                                            <Label fx:id="titleLabel" text="--" />
                                        </children>
                                    </HBox>

                                </children>
                            </VBox>

                            <!-- RIGHT COLUMN -->
                            <VBox spacing="10">
                                <children>

                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Officer:" />
                                            <Label fx:id="officerLabel" text="--" />
                                        </children>
                                    </HBox>

                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Filed:" />
                                            <Label fx:id="dateLabel" text="--" />
                                        </children>
                                    </HBox>

                                </children>
                            </VBox>

                        </children>
                    </HBox>
                </children>
            </VBox>

            <!-- VERDICT -->
            <VBox spacing="5">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Verdict *" />
                    <ComboBox fx:id="verdictCombo" promptText="Select verdict" styleClass="court-combo" />
                </children>
            </VBox>

            <!-- SENTENCE -->
            <VBox spacing="5">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Sentence *" />
                    <TextArea fx:id="sentenceField" prefRowCount="2" promptText="Enter sentence details" />
                </children>
            </VBox>

            <!-- NOTES -->
            <VBox spacing="5">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Notes (Optional)" />
                    <TextArea fx:id="notesField" prefRowCount="2" promptText="Add any additional notes" />
                </children>
            </VBox>

            <!-- DATE -->
            <VBox spacing="5">
                <children>
                    <Label style="-fx-font-weight: bold;" text="Verdict Date *" />
                    <DatePicker fx:id="verdictDate" />
                </children>
            </VBox>

            <!-- BUTTONS -->
            <HBox spacing="10">
                <children>
                    <Button fx:id="saveBtn" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;" text="ðŸ’¾  Save Verdict" />

                    <Button fx:id="cancelBtn" style="-fx-background-color: #e0e0e0; -fx-padding: 8 15; -fx-background-radius: 5;" text="Cancel" />
                </children>
            </HBox>

        </VBox>
    </content>

</ScrollPane>