<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<ScrollPane fitToWidth="true" style="-fx-background: #f6f6f6; -fx-padding: 10;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <VBox spacing="25">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- PAGE TITLE -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Record Verdict" />

        <!-- HEADER BLUE BOX -->
        <VBox style="-fx-background-color: #ff9800; -fx-background-radius: 6;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="âš–  Record Verdict" />
            <Label style="-fx-text-fill: white; -fx-opacity: 0.8;" text="Enter verdict details for the selected case" />
        </VBox>

        <!-- CASE INFO SECTION -->
        <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-background-radius: 8;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Case Information" />

            <HBox spacing="50">
                <VBox spacing="5">
                    <Label text="Case Number: CR-2024-001" />
                    <Label text="Type: Criminal" />
                    <Label text="Description: Theft of property valued over $1,000" />
                </VBox>

                <VBox spacing="5">
                    <Label text="Defendant: John Doe" />
                    <Label text="Filed: 1/15/2024" />
                </VBox>
            </HBox>
        </VBox>

        <!-- VERDICT SELECTION -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Verdict *" />
            <ComboBox promptText="Select verdict" />
        </VBox>

        <!-- SENTENCE -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Sentence *" />
            <TextArea prefRowCount="2" promptText="Enter sentence details (e.g., 2 years imprisonment, $1,000 fine)" />
        </VBox>

        <!-- NOTES -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Notes (Optional)" />
            <TextArea prefRowCount="2" promptText="Add any additional notes or observations" />
        </VBox>

        <!-- VERDICT DATE -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold;" text="Verdict Date *" />
            <DatePicker />
        </VBox>

        <!-- BUTTONS -->
        <HBox spacing="10">
            <Button style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;" text="ðŸ’¾  Save Verdict" />

            <Button style="-fx-background-color: #e0e0e0; -fx-padding: 8 15;                            -fx-background-radius: 5;" text="Cancel" />
        </HBox>

    </VBox>

</ScrollPane>
