<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true"
            style="-fx-background: #f6f6f6;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fcms.controllers.courtOfficial.CourtDashboardController">

    <VBox spacing="25">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- ====================== PAGE TITLE ====================== -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;"
               text="Court Dashboard" />


        <!-- ====================== OVERVIEW SECTION ====================== -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                   text="Overview" />

            <HBox spacing="20">

                <!-- Total Cases -->
                <VBox prefWidth="200" spacing="10"
                      style="-fx-background-color: white; -fx-background-radius: 10;
                             -fx-border-radius: 10; -fx-padding: 15; -fx-border-color: #ffa54f;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;"
                           text="Total Cases" />
                    <Label fx:id="totalCasesLabel"
                           style="-fx-font-size: 30px; -fx-font-weight: bold;"
                           text="0" />
                </VBox>

                <!-- Cases Awaiting Verdict -->
                <VBox prefWidth="200" spacing="10"
                      style="-fx-background-color: white; -fx-border-color: #ffa54f;
                             -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;"
                           text="Cases Awaiting Verdict" />
                    <Label fx:id="awaitingVerdictLabel"
                           style="-fx-font-size: 30px; -fx-font-weight: bold;"
                           text="0" />
                </VBox>

                <!-- Verdicts Recorded -->
                <VBox prefWidth="200" spacing="10"
                      style="-fx-background-color: white; -fx-border-color: #ffa54f;
                             -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;"
                           text="Verdicts Recorded" />
                    <Label fx:id="verdictsRecordedLabel"
                           style="-fx-font-size: 30px; -fx-font-weight: bold;"
                           text="0" />
                </VBox>

            </HBox>
        </VBox>


        <!-- ====================== SUBMITTED CASES SECTION ====================== -->
        <VBox spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <VBox spacing="3">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                           text="Submitted Cases" />
                    <Label style="-fx-text-fill: #777;"
                           text="Cases that require a verdict to be recorded" />
                </VBox>
                <Pane HBox.hgrow="ALWAYS" />
                <Label style="-fx-text-fill: #1a2c60; -fx-font-weight: bold; -fx-cursor: hand;"
                       text="See More >"
                       onMouseClicked="#openSearchCases" />
            </HBox>

            <!-- Dynamic cards inserted here -->
            <VBox fx:id="submittedCasesContainer" spacing="10"/>
        </VBox>


        <!-- ====================== CASE HISTORY SECTION ====================== -->
        <VBox spacing="10"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">

            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                   text="Case History" />
            <Label style="-fx-text-fill: #777;"
                   text="All cases with recorded verdicts" />

            <!-- Dynamic history cards inserted here -->
            <VBox fx:id="caseHistoryContainer" spacing="10"/>
        </VBox>

    </VBox>
</ScrollPane>
