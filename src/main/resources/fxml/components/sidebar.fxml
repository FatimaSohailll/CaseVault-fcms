<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.fcms.controllers.components.SidebarController"
      spacing="8" styleClass="sidebar" fx:id="sidebarContainer"
      minWidth="80" prefWidth="200" maxWidth="250">

    <padding>
        <Insets top="24" right="8" bottom="24" left="8"/>
    </padding>
    <!-- Collapse/Expand toggle button -->
    <Button text="â˜°" onAction="#toggleSidebar" styleClass="collapse-btn"/>

    <HBox fx:id="dashboardRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="dashboardIcon"/>
        <Button fx:id="dashboardBtn" text="Dashboard" onAction="#handleDashboard" styleClass="nav-btn"/>
    </HBox>

    <HBox fx:id="registerRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="registerIcon"/>
        <Button fx:id="registerBtn" text="Register New Case" onAction="#handleRegisterCase" styleClass="nav-btn"/>
    </HBox>

    <HBox fx:id="manageCasesRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="manageCasesIcon"/>
        <Button fx:id="manageCasesBtn" text="Manage Cases" onAction="#handleManageCases" styleClass="nav-btn"/>
    </HBox>


    <HBox fx:id="forensicAnalysisRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="forensicAnalysisIcon" />
        <Button fx:id="forensicAnalysisBtn" onAction="#handleForensicAnalysis" prefHeight="25.0" prefWidth="154.0" styleClass="nav-btn" text="Forensic Analysis" />
    </HBox>

    <HBox fx:id="manageParticipantsRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="manageParticipantsIcon" />
        <Button fx:id="manageParticipantsBtn" onAction="#handleManageParticipants" styleClass="nav-btn" text="Manage Participants" />
    </HBox>

    <HBox fx:id="crimeAnalyticsRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="crimeAnalyticsIcon" />
        <Button fx:id="crimeAnalyticsBtn" onAction="#handleCrimeAnalytics" styleClass="nav-btn" text="Crime Analytics" />
    </HBox>

    <HBox fx:id="closeCaseRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="closeCaseIcon"/>
        <Button fx:id="closeCaseBtn" text="Close Case" onAction="#handleCloseCase" styleClass="nav-btn"/>
    </HBox>
    <HBox fx:id="searchCasesRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="searchCasesIcon"/>
        <Button fx:id="searchCasesBtn" text="Search and Filter Cases" onAction="#handleSearchCases" styleClass="nav-btn"/>
    </HBox>
    <HBox fx:id="submitToCourtRow" spacing="10" styleClass="nav-row">
        <Pane fx:id="submitToCourtIcon"/>
        <Button fx:id="submitToCourtBtn" text="Submit to Court" onAction="#handleSubmitToCourt" styleClass="nav-btn"/>
    </HBox>

    <!-- Spacer to push content up and let sidebar grow vertically -->
    <Region VBox.vgrow="ALWAYS"/>
</VBox>
